<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="30dp">
    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.makeramen.roundedimageview.RoundedImageView
            app:riv_corner_radius="30dp"
            android:layout_margin="8dp"
            android:id="@+id/recommended_img"
            android:scaleType="centerCrop"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/oranges" />
        <TextView
            android:layout_marginStart="15dp"
            android:id="@+id/recommended_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoe_ui_bold"
            android:text="@string/product_name_1"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#53556C" />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:id="@+id/recommended_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoe_ui_bold"
            android:text="item type"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#7E7474" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="#E54B4B"
            android:padding="2dp">

            <TextView
                android:id="@+id/recommended_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="15dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/segoe_ui_bold"
                android:text="5.99 $"
                android:textColor="#fff"
                android:textSize="23sp"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/recommended_rating"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:src="@drawable/star" />
            <TextView
                android:id="@+id/pop_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toEndOf="@id/recommended_rating"
                android:fontFamily="@font/segoe_ui_bold"
                android:text="5.0"
                android:textColor="#fff" />
        </RelativeLayout>
        <TextView
            android:layout_margin="10dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginTop="5dp"
            android:layout_marginStart="13dp"
            android:id="@+id/recommended_des"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoe_ui"
            android:text="@string/description"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.cardview.widget.CardView>